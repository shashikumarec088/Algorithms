# Write your MySQL query statement below

select student_id,
min(course_id) as course_id,
grade
from enrollments e1
where e1.grade >= all(
select e2.grade
from enrollments e2
where e2.student_id = e1.student_id
)
group by student_id
order by student_id
/*
