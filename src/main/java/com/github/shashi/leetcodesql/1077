# Write your MySQL query statement below


select project_id,
employee_id
from
(
select project_id,
p.employee_id,
experience_years,
max(experience_years) over(partition by project_id) mx
from project p
join employee e
on p.employee_id = e.employee_id
)
sub
where sub.experience_years = sub.mx

/*
