# Write your MySQL query statement below

select s1.gender,
s1.day,
sum(s2.score_points) as total
from scores s1
inner join scores s2
on s1.gender = s2.gender
and s2.day <= s1.day
group by s1.gender,
s1.day
order by s1.gender,
s1.day

/*
select gender,
day,
sum(score_points) over(partition by gender order by day) as total
from scores s
group by gender,
day
order by gender, day
*/