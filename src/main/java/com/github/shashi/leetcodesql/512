#on sub.player_id = main.player_id
#and sub.min_date = main.event_date

select sub.player_id as player_id,
sub.device_id as device_id
from
(
select player_id,
    device_id,
    row_number() over(partition by player_id order by event_date) as rn
    from activity
)
sub
where sub.rn=1
